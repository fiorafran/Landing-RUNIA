{
  "name": "strong-shepherd",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:optimized": "NODE_ENV=production astro build",
    "preview": "astro preview",
    "astro": "astro",
    "type-check": "astro check",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "npm run build && npx bundle-analyzer dist/_astro/*.js",
    "performance": "npm run build && lighthouse http://localhost:4321 --output=html --output-path=./lighthouse-report.html",
    "test:build": "npm run build && npm run preview",
    "clean": "rimraf dist .astro",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@astrojs/tailwind": "^6.0.2",
    "astro": "^5.12.4",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.0",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "terser": "^5.43.1"
  }
}
