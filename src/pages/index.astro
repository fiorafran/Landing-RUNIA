---
// Importar componentes
import BaseLayout from '../components/layout/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Hero from '../components/sections/Hero.astro';
import Solutions from '../components/sections/Solutions.astro';
import WhyChooseUs from '../components/sections/WhyChooseUs.astro';
import Integrations from '../components/sections/Integrations.astro';
import CTA from '../components/sections/CTA.astro';
import Contact from '../components/sections/Contact.astro';
import Footer from '../components/sections/Footer.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';

// SEO optimized content
const seoData = {
  title: "Chatbots IA - Automatización Inteligente para WhatsApp Business",
  description: "Creamos chatbots con inteligencia artificial que automatizan tus procesos, reducen costos y escalan tu atención al cliente sin esfuerzo. Especialistas en WhatsApp Business API.",
  keywords: [
    "chatbots",
    "inteligencia artificial", 
    "automatización",
    "whatsapp business",
    "atención al cliente",
    "IA",
    "chatbot whatsapp",
    "automatización procesos",
    "argentina",
    "buenos aires"
  ],
  image: "/images/og-chatbots-ia.jpg",
  canonical: "/"
};
---

<BaseLayout 
  title={seoData.title}
  description={seoData.description}
  image={seoData.image}
  canonical={seoData.canonical}
  type="website"
  tags={seoData.keywords}
>
  <!-- Header -->
  <Header />

  <!-- Hero Section -->
  <Hero />

  <!-- Solutions Section -->
  <Solutions />

  <!-- Why Choose Us Section -->
  <WhyChooseUs />

  <!-- Integrations Section -->
  <Integrations />

  <!-- CTA Section -->
  <CTA />

  <!-- Contact Section -->
  <Contact />

  <!-- Footer -->
  <Footer />
</BaseLayout>
