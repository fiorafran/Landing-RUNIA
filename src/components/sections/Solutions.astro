              <div class="mb-8">
                <ul class="text-left space-y-3">
                  {solution.features.map((feature, featureIndex) => (
                    <li class="flex items-center text-sm text-neutral-600 group-hover:text-neutral-700 transition-colors duration-300">
                      <div class="w-2 h-2 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full mr-3 flex-shrink-0 group-hover:scale-125 transition-transform duration-300"></div>
